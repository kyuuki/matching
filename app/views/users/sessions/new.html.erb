<% content_for :title do %>
ログイン
<% end %>

<div class="p-search_area c-border-t c-border-r c-border-l">
  <div class="container">
    <h3 class="text-center section__title-sub2">ログイン</h3>

    <div class="alert alert-dismissible alert-warning">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <p>TODO: デザイン未適用。ダイアログ表示でのログインは時間がかかりそう。</p>
      <p>TODO: Twitter, Facebook ログイン未実装。</p>
    </div>

    <div class="alert alert-dismissible alert-info">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <p>メールアドレス: a@a.com、パスワード: aaaaaa でログインできます。</p>
    </div>

<%= form_for(resource, as: resource_name, url: new_session_path(resource_name),
             html: { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-md-10 col-md-offset-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "control-label" %>
      </div>
    </div>
  <% end -%>

  <div class="form-group">
    <div class="col-md-10 col-md-offset-2">
      <%= f.submit "ログイン", class: "btn btn-large btn-primary" %>
    </div>
  </div>

  <br>

  <!--
  <div class="form-group">
    <div class="col-md-6 col-md-offset-3">
      <%= render "users/shared/links" %>
    </div>
  </div>
  -->
<% end %>

  </div>
</div><!-- .p-search_area -->
