<% content_for :title do %>
マイページ
<% end %>

<% content_for :js do %>
<script src="/js/mypage.js" type="text/javascript"></script>
<% end %>

<div class="alert alert-dismissible alert-warning">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <p>TODO: メニュー構成要検討。</p>
</div>

<section>
       <h3 class="text-center section__title-sub2">会員情報</h3>
          <dl class="c-table">
              <dt>アカウント名</dt>
              <dd>
                <% if current_user.account_name.nil? %>
                  (未登録)
                <% else %>
                  <%= current_user.account_name %>
                <% end %>
              </dd>
           </dl>
           <dl class="c-table">
               <dt>メールアドレス</dt>
               <dd><%= current_user.email %></dd>
           </dl>
           <dl class="c-table">
               <dt>氏名</dt>
               <dd>
                 <% if current_user.last_name.blank? && current_user.first_name.blank? %>
                   (未登録)
                 <% else %>
                   <%= current_user.last_name %> <%= current_user.first_name %>
                 <% end %>
               </dd>
           </dl>
           <dl class="c-table">
               <dt>性別</dt>
               <dd>
                 <% if current_user.sex == 1 %>
                   男
                 <% elsif current_user.sex == 2 %>
                   女
                 <% else %>
                   (未登録)
                 <% end %>
               </dd>
           </dl>
           <dl class="c-table">
               <dt>生年月日</dt>
               <dd>
                 <% if current_user.birthday.nil? %>
                   (未登録)
                 <% else %>
                   <%= current_user.birthday %>
                 <% end %>
               </dd>
           </dl>
           <dl class="c-table">
               <dt>住所</dt>
               <dd>
                 <% if current_user.japan_user.nil? %>
                  (未登録)
                 <% else %>
                   <%= current_user.japan_user.japan_prefecture.name %><br>
                   <%= current_user.address2 %><br>
                   <%= current_user.address3 %>
                 <% end %>
               </dd>
           </dl>
           <dl class="c-table">
               <dt>電話番号</dt>
               <dd>
                 <% if current_user.phone.nil? %>
                  (未登録)
                 <% else %>
                   <%= current_user.phone %>
                 <% end %>
               </dd>
           </dl>
           <dl class="c-table">
               <dt>電話番号 (携帯)</dt>
               <dd>
                 <% if current_user.phone_mobile.nil? %>
                  (未登録)
                 <% else %>
                   <%= current_user.phone_mobile %>
                 <% end %>
           </dl>
</section>
