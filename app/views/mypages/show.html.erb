<% content_for :title do %>
マイページ
<% end %>

<% content_for :js do %>
<script src="/js/mypage.js" type="text/javascript"></script>
<% end %>

<div class="alert alert-dismissible alert-warning">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <p>TODO: メニュー構成要検討。</p>
  <p>TODO: マイページトップに表示するコンテンツをどうするか？</p>
</div>

<section>
       <h3 class="text-center section__title-sub2">タイトル</h3>
          <dl class="c-table">
              <dt>ユーザー名</dt>
              <dd>
                <% if current_user.account_name.nil? %>
                  (未登録)
                <% else %>
                  <%= current_user.account_name %>
                <% end %>
              </dd>
           </dl>
           <dl class="c-table">
               <dt>メールアドレス</dt>
               <dd><%= current_user.email %></dd>
           </dl>
           <dl class="c-table">
               <dt>性別</dt>
               <dd>
                 <% if current_user.sex == 1 %>
                   男
                 <% elsif current_user.sex == 2 %>
                   女
                 <% else %>
                   (未登録)
                 <% end %>
               </dd>
           </dl>
</section>
<section>
    <h3 class="text-center section__title-sub2">タイトル</h3>
      <form class="form-horizontal">
        <div class="form-group text-left">
            <label class="control-label col-xs-3">ユーザー名</label>
            <div class="col-xs-7">
                <input type="text" name="name" class="form-control">
            </div>
        </div>
        <div class="form-group text-left">
          <div class="field_with_errors">
            <label class="control-label col-xs-3">メールアドレス</label>
            <div class="col-xs-7">
                <input type="text" name="name" class="form-control">
                <span class="help-inline">エラーを修正してください</span>
            </div>
          </div>
        </div>

        <div class="form-group text-left">
          <label class="control-label col-xs-3">ファイル選択</label>
          <div class="col-xs-7">
            <input type="file" id="file_select" class="form-control" style="display:none;">
            <div class="input-group">
              <span class="input-group-btn">
                <button type="button" id="file_select_icon" class="btn btn-sm"><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span></button>
              </span>
              <input type="text" id="file_name" class="form-control" placeholder="Select file ..." readonly>
            </div>

            <div class="form-group form-group-sm">
              <div class="col-lg-offset-2 col-lg-10">
                <button type="button" class="btn btn-sm btn-default" id="btn_filename">ファイル選択の値を取得</button>
                <button type="button" class="btn btn-sm btn-default" id="btn_clear_file">ファイル選択の値をクリア</button>
              </div>
            </div>

          </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12 text-center">
                <button type="submit" class="btn btn-danger">更新する</button>
            </div>
        </div>
    </form>
</section>

